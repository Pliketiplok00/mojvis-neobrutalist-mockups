{
  "cli": {
    "version": ">= 18.0.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "env": {
        "GRADLE_OPTS": "-Xmx4g -XX:MaxMetaspaceSize=512m"
      },
      "cache": {
        "key": "v2-production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
